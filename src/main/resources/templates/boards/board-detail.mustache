{{>layout/header}}

<h1>게시글</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <p>{{board.id}}</p>
            </div>
            <div class="form-group">
                <label for="categorys">카테고리</label>
                <p>{{board.categorys.title}}</p>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <p>{{board.title}}</p>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <p>{{board.author}}</p>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <p>{{board.content}}</p>
            </div>
        </form>
        <a href="/boards/boardList" role="button" class="btn btn-secondary">목록</a>
        <a href="/boards/board/update/{{id}}" role="button" class="btn btn-primary">수정 및 삭제</a>
    </div>
</div>

{{>layout/footer}}