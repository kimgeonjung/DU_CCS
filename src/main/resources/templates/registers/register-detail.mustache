{{>layout/header}}

<h1>가입신청서</h1>

<div class="row">
    <div class="col-md-6">
        <!-- 개인 정보 -->
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>이름</th>
                <td>{{name}}</td>
                <th>학년</th>
                <td>{{grade}}</td>
                <th>학번</th>
                <td>{{student_num}}</td>
                <th>전화번호</th>
                <td>{{phone}}</td>
            </tr>
            <tr>
                <th>반</th>
                <td>{{class_name}}</td>
                <th>성별</th>
                <td>{{gender}}</td>
                <th>생년월일</th>
                <td>{{brith_date}}</td>
                <th>이메일</th>
                <td>{{email}}</td>
            </tr>
            </tbody>
        </table>

        <!-- 자기소개 -->
        <div class="form-group">
            <label for="selfIntroduction">자기소개</label>
            <textarea class="form-control" id="selfIntroduction" rows="4">{{self_introduction}}</textarea>
        </div>

        <!-- 지원동기 -->
        <div class="form-group">
            <label for="motivation">지원동기</label>
            <textarea class="form-control" id="motivation" rows="4">{{motivation}}</textarea>
        </div>
    </div>

    <div class="col-md-6">
        <!-- 하고싶은 활동 -->
        <div class="form-group">
            <label for="desiredActivity">하고싶은 활동</label>
            <textarea class="form-control" id="desiredActivity" rows="4">{{desired_activity}}</textarea>
        </div>

        <!-- 자신의 장점 -->
        <div class="form-group">
            <label for="strengths">자신의 장점</label>
            <textarea class="form-control" id="strengths" rows="4">{{strengths}}</textarea>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <a href="#" class="btn btn-primary">목록</a>
    </div>
    <div class="col-md-6 text-right">
        <button class="btn btn-success">가입 승인</button>
        <button class="btn btn-danger">거절</button>
    </div>
</div>

{{>layout/footer}}