<script>
function addOptionToSelect(value, label, selected) {
    var select = document.getElementById("categorys");
    var option = document.createElement("option");
    option.value = value;
    option.text = label;
    if (selected) {
        option.selected = true;
    }
    select.appendChild(option);
}

document.addEventListener("DOMContentLoaded", function () {

    var categoriesData = [
        { value: "NOTICE", label: "공지사항", selected: false },
        { value: "DATA_ARCHIVE", label: "자료게시판", selected: true },
        { value: "PHOTO_GALLERY", label: "포토갤러리", selected: false },
    ];

    var selectedCategory = "{{board.categorys}}";

    categoriesData.forEach(function (category) {
        addOptionToSelect(
            category.value,
            category.label,
            category.value === "{{board.categorys}}"
        );
    });
});
</script>